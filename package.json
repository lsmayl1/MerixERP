{
  "name": "merix",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "install:all": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "build": {
    "appId": "com.ismayil.merix",
    "productName": "Merix",
 "files": [
  ".env",
  ".env.development",
   "frontend/dist/",
  "dist/",
  "node_modules/",
  "package.json",
  "main.js",
  "backend/",
  "app.js",
  "routes/",
  "models/",
  "utils/"
],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": false,
     "extraResources": [
    {
      "from": "backend/.env",
      "to": ".env"
    }
  ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lsmayl1/Merix.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lsmayl1/Merix/issues"
  },
  "homepage": "https://github.com/lsmayl1/Merix#readme",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron-builder": "^26.0.12",
    "electron": "^37.3.1"

  },
  "dependencies": {
  }
}
